<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@color/colorPrimary">

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="enter"
                android:onClick="enter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:id="@+id/button"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="exit"
                android:onClick="exit"
                app:layout_constraintTop_toTopOf="parent" android:id="@+id/button2"
                app:layout_constraintStart_toEndOf="@+id/button" android:layout_marginStart="8dp"/>
        <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="drawer"
                app:layout_constraintTop_toTopOf="parent" android:id="@+id/button3"
                app:layout_constraintStart_toEndOf="@+id/button2" android:layout_marginStart="8dp"/>

        <EditText
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:lines="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button"
                android:hint="游戏窗口高度px"/>


    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            app:headerLayout="@layout/navigation_header"
            android:background="#000">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>